<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/purplebackground"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SettingFragment">

    <TextView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/Settingframentmenu"
        android:text="Settings Fragment"
        android:textSize="20dp"

        android:gravity="center">

    </TextView>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textone"
                    android:layout_width="140dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="100dp"
                    android:layout_marginTop="20dp"
                    android:text="Send Money"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold">

                </TextView>
            </LinearLayout>


            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                android:layout_marginTop="0dp">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/viewimageone"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/imageviewone">

                    </ImageView>


                    <ImageView
                        android:id="@+id/viewimagetwo"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/imagevieweight">

                    </ImageView>


                    <ImageView
                        android:id="@+id/viewimagethree"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="40dp"
                        android:background="@drawable/imageten">

                    </ImageView>

                    <ImageView
                        android:id="@+id/viewimagefour"
                        android:layout_width="55dp"
                        android:layout_height="60dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="50dp"
                        android:background="@drawable/imageviewtwo">

                    </ImageView>


                    <ImageView
                        android:id="@+id/viewimagefive"
                        android:layout_width="45dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="55dp"
                        android:background="@drawable/imageviewone">

                    </ImageView>


                </LinearLayout>
            </HorizontalScrollView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <ImageView
                    android:id="@+id/viewimagesix"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/imageten">

                </ImageView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/texttwo"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="50dp"
                        android:text="Jane"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/textthree"
                        android:layout_width="100dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="0dp"
                        android:text="Smith"
                        android:textSize="20dp"
                        android:textStyle="bold">

                    </TextView>


                    <TextView
                        android:id="@+id/textfour"
                        android:layout_width="70dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="0dp"
                        android:text="UI/UX Designer"
                        android:textSize="10dp">

                    </TextView>



                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/textfive"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="105dp"
                android:layout_marginTop="55dp"
                android:text="$4380.50"
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@color/black">

            </TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <com.google.android.material.button.MaterialButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnone"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="105dp"
                    android:backgroundTint="@color/white"
                    android:text="usd"
                    app:cornerRadius="5dp">

                </com.google.android.material.button.MaterialButton>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btntwo"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/black"
                    android:text="usd"
                    app:cornerRadius="5dp">

                </com.google.android.material.button.MaterialButton>



                <com.google.android.material.button.MaterialButton
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/btnthree"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="10dp"
                    android:backgroundTint="@color/white"
                    android:text="usd"
                    app:cornerRadius="5dp">

                </com.google.android.material.button.MaterialButton>

            </LinearLayout>



            <TextView
                android:id="@+id/textsix"
                android:layout_width="170dp"
                android:layout_height="40dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="15dp"
                android:text="Thanks for your hard work "
                android:textSize="13dp"
                android:textStyle="bold">

            </TextView>


            <com.google.android.material.button.MaterialButton
                android:layout_width="80dp"
                android:layout_height="70dp"
                android:id="@+id/btnfour"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="115dp"
                android:backgroundTint="@color/black"
                app:cornerRadius="20dp"
                android:text="Send">

            </com.google.android.material.button.MaterialButton>



        </LinearLayout>


    </ScrollView>


</RelativeLayout>